{
    "manifest_version": 3,
    "name": "Open Pop-ups in Tabs",
    "version": "1.0",
    "description": "Forces pop-up links to open in a new tab instead of a new window.",
    "permissions": ["tabs"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  